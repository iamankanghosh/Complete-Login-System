  <div class="container">

    <section class="mt-5">
      <div class="row">
        <h1>Profile</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{{ name }}</td>
              <td>{{ email }}</td>
            </tr>
          </tbody>
        </table>

        <div class="col-md-4">
          <h2>Update Password</h2>
          <form method="POST" action="/auth/updatePassword">
            <div class="mb-2">
              <label for="old-password" class="form-label">Old Password</label>
              <div class="input-group">
                <input type="password" class="form-control" name="oldpassword" id="old-password" required>
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('old-password')">
                  <i class="bi bi-eye"></i>
                </button>
              </div>
            </div>
            <div class="mb-2">
              <label for="new-password" class="form-label">New Password</label>
              <div class="input-group">
                <input type="password" class="form-control" name="newpassword" id="new-password" required>
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('new-password')">
                  <i class="bi bi-eye"></i>
                </button>
              </div>
            </div>
            <button type="submit" class="btn btn-primary btn-dark">Update Password</button>
          </form>

        </div>


        <div class="col-md-4">
          <h2>Log Out from this device</h2>
          <form method="POST" action="/auth/logout">
            {{!-- <div class="mb-2">
              <label for="password" class="form-label">Password</label>
              <div class="input-group">
                <input type="password" class="form-control" id="password" required>
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('password')">
                  <i class="bi bi-eye"></i>
                </button>
              </div>
            </div> --}}
            <button type="submit" class="btn btn-primary btn-dark">Log Out</button>
          </form>

        </div>




        <div class="col-md-4">
          <h2>Log Out from all device</h2>
          <form method="POST" action="/auth/logout/all">
            <div class="mb-2">
              <label for="password" class="form-label">Password</label>
              <div class="input-group">
                <input type="password" class="form-control" id="password" name="password" required>
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('password')">
                  <i class="bi bi-eye"></i>
                </button>
              </div>
            </div>
            <button type="submit" class="btn btn-primary btn-dark">Log Out from all</button>
          </form>

        </div>


      </div>
    </section>
  </div>


